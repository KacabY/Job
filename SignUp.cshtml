    }

    .file-input {
        display: none;
    }

    .submit-btn {
        width: 100%;
        padding: 1rem;
        margin-top: 2rem;
        background-color: var(--black);
        color: var(--white);
        border: none;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-btn:hover {
            background-color: var(--gray-dark);
        }

    .login-link {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05rem;
    }

        .login-link a {
            color: var(--black);
